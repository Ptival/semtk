<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>bin</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
        <fileSet>
            <directory>../</directory>
            <outputDirectory>semtk-opensource/</outputDirectory>
            <includes>
                <include>*/target/**/*.jar</include>
            </includes>
			<excludes>
                <exclude>sparqlGraphLibrary/target/**/*.jar</exclude>
                <exclude>standaloneExecutables/target/**/*.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>../sparqlGraphWeb/</directory>
            <outputDirectory>semtk-opensource/sparqlGraphWeb/</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../</directory>
            <outputDirectory>semtk-opensource/</outputDirectory>
            <includes>
                <include>startServices.sh</include>
                <include>stopServices.sh</include>
                <include>updateWebapps.sh</include>
                <include>.env</include>
                <include>.fun</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>